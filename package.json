{
  "name": "phonebook",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --inspect server/index.js --ignore dist/ --exec babel-node",
    "build:server": "cross-env NODE_ENV=production babel ./server -d ./dist",
    "build:client": "cross-env NODE_ENV=production webpack --config ./webpack",
    "build": "npm run build:server && npm run build:client",
    "predeploy": "npm run build",
    "deploy": "cross-env NODE_ENV=production node ./dist/index.js",
    "test:server": "cross-env NODE_ENV=test lab -c -S -T ./node_modules/lab-babel -I core,System,asap,Observable,regeneratorRuntime,_babelPolyfill,__core-js_shared__ ./server",
    "test:client": "cross-env NODE_ENV=test jest",
    "test": "npm run test:server && npm run test:client",
    "lint": "eslint client --color",
    "clean": "npm prune && npm i"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.16.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "bulma": "^0.4.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.2",
    "custom-error": "^0.2.1",
    "dotenv": "^4.0.0",
    "file-loader": "^0.11.1",
    "font-awesome": "^4.7.0",
    "hapi": "16.1.1",
    "html-webpack-plugin": "^2.28.0",
    "inert": "^4.2.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.10.2",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-form": "^6.7.0",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.0",
    "validator": "^7.0.0",
    "webpack": "^2.6.0",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "code": "^4.0.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.3",
    "lab": "^13.1.0",
    "lab-babel": "^1.1.1",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "react-test-renderer": "^15.5.4",
    "redux-mock-store": "^1.2.3",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss|sass)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "client"
    ],
    "verbose": true,
    "testRegex": "client/.*/.*.spec.(js|jsx)$",
    "collectCoverage": true
  }
}
